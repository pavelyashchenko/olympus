@import "base/_global"
  
.page-section--main
  position relative
  background-color #D9D9D9
  background-image url('../img/pictures/main-bg.webp')
  background-repeat no-repeat
  background-position top center
  background-size 100%

.page-section__row
  position relative

  .cta
    position relative
    width 523px
    padding-top 140px
    padding-bottom 100px
    text-align center
    z-index 10

    &__picture
      img
        width 100%

    &__button
      margin-top 40px

  .characters
    position absolute
    width 100%
    top 80px
    left 50%
    z-index 1

    &--impressario
      position absolute
      z-index 2

    &--zeus
      position absolute
      top -60px
      z-index 1    

  .game__name
    position absolute
    width 527px
    top 512px
    right 30px
    z-index 9

    img
      width 100%

.cloud-top
  position absolute
  top 560px
  left -300px
  right 0
  z-index 3
  animation floating 10s infinite linear

.thunder-bolds
  position absolute
  bottom -50px
  left 0
  right 0
  z-index 3
  animation lightning 5s infinite linear

  img
    width 100%

.cloud-bottom
  position absolute
  bottom -10px
  left 0
  right 0
  z-index 2
  animation floating2 8s infinite linear

  img
    width 100%

.decoration-arrow
  position relative
  z-index 8
  text-align center
  padding-bottom 70px

.terms-conditions
  position relative
  z-index 10
  padding-bottom 150px
  max-width 874px
  margin 0 auto

  &__title
    font-weight 700
    font-size 35px
    text-align center
    color #171C61
    margin-bottom 45px

  &__list
    padding-left 32px
    margin-bottom 80px

  &__item
    position relative
    font-weight 300
    font-size 20px
    line-height 1.4
    color #1E1E1E
    margin-bottom 5px

    &::before
      content ''
      position absolute
      left -32px
      top 50%
      transform translateY(-50%)
      width 12px
      height 14px
      background-image url('../img/pictures/list-ico.png')

  &__button
    text-align center

@keyframes floating
  0%
    transform translateX(0) translateY(0) rotate(0)

  50%
    transform translateX(-20px) translateY(-10px) rotate(2deg)

  100%
    transform translateX(0) translateY(0) rotate(0)

@keyframes floating2
  0%
    transform translateX(0)

  50%
    transform translateX(-10px)

  100%
    transform translateX(0)

@keyframes lightning
  0%
    filter sepia(1)
    opacity 1

  4%
    filter sepia(0)
    opacity .8

  100%
    filter sepia(0)
    opacity .8

@import "media/_media-index.styl"